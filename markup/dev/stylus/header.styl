.header {
	background: #fff;
	position: relative;
	padding: 10px 0 0;
	margin: 0 0 $headerMargin;
	&:after {
		height: 3px;
		width: 100%;
		display: block;
		content: '';
		margin: -3px 0;
		{$lineGradient};
	}
	&_main {
		padding: 0 0 70px;
		background: none;
		height: auto;
		margin: 0;
		&:after {
			height: 3px;
			width: 100%;
			display: block;
			content: '';
			margin: -3px 0;
			lineGradient();
		}

	}
	&_main &__wrapper {
		padding: 17px 0 3px;
		height: 75px;
		position: relative;
	}
	&__wrapper {
		height: 66px;
	}
}
.small-logo {
	float: left;
	margin: 0 25px 0 0;
}
.logo {
	margin: 0;
	text-align: center;
}
.site-description {
	text-align: center;
	position: absolute;
	left: 0;
	display: block;
	margin-top: 20px;
	right: 0;
	top: 100%;
	height: 22px;
	text-indent: -9999px;
	overflow: hidden;
	bg("description.png",50%);	
}
.nav {
	overflow: hidden;
	padding: 12px 0;
	&_bottom {
		display: table-row;
		height: 33%;
		text-align: center;
	}
	&__list {
		list-style:none;
		margin:0;
		font-size: 16px;
		padding: 0;
		font-weight: bold;
		color: #000;
		&-item {
			display: inline-block;
			vertical-align: top;
			position: relative;
			a {
				color: #000;
				display: block;
				padding: 0 12px;
				height: 30px;
				border: 1px solid transparent;
				border-radius: 6px;
				line-height: 28px;
				text-decoration: none;
			}
			&_active a,
			a:hover {
				color: #fff;
				text-shadow: 0 1px 0 rgba(0,0,0,0.8);
				background: #b99b8e;
				background:linear-gradient(to bottom, #d3c0b8, #a17664);
				border: 1px solid #c49e8b; 
				box-shadow: 0 1px 0 rgba(0,0,0,0.6),0 1px 0 rgba(255,255,255,0.6) inset;
			}
		}
	}
	&_bottom &__list {
		padding:0 0 25px;
		font-size: 18px;
	}
	&_bottom &__list-item {
		margin: 0 25px;
	}
	&_bottom &__list-item a {
		height: 32px;
		line-height: 30px;
		padding: 0 14px;
	}
}