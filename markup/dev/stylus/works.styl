.works {
	&-nav {
		margin: 0 0 20px;
		&__list {
			list-style:none;
			margin:0;
			padding:0;
			text-align: center;
			font-weight: bold;
		}
		&__list-item {
			display: inline-block;
			vertical-align: top;
			a {
				display: block;
				color: $textColor;
				text-decoration: none;
				padding: 4px;
				border-radius: 8px;
			}
			span {
				display: block;
				height: 27px;
				line-height: 28px;
				padding: 0 5px;
				border: 2px dotted;
				border-radius: 6px;
			}
			&_active a,
			a:hover {
				background: #fff;
				box-shadow: 0 1px 1px rgba(0,0,0,0.7);
			}
		}
	}
	&-list {
		list-style:none;
		padding:0 0 8px 42px;
		overflow: hidden;
		margin: 0;
		&__item {
			width: 175px;
			padding: 9px 13px 16px 10px;
			height: 175px;
			position: relative;
			float: left;
			margin: 0 25px 8px 0;
			img {
				border-radius: 84px;
			}
		}
		&__frame {
			position: absolute;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			bg("works-frame.png");
		}
	}
}
.pagings {
	padding: 0 0 15px;
	font-weight: bold;
	&__list {
		list-style:none;
		margin:0;
		padding:0;
		font-size: 0;
		line-height: 0;
		text-align: center;
	}
	&__item {
		display: inline-block;
		vertical-align: top;
		font-size: 16px;
		line-height: 18px;
		margin: 0 2px;
		&_placer {
			padding: 4px 0 0;
		}
		a {
			text-decoration: none;
			color: $textColor;
			display: block;
			padding: 4px 7px;
			border-radius: 5px;
			height: 18px;
			cursor: pointer;
			position: relative;
			&:after {
				content: '';
				position: absolute;
				left: 2px;
				top: 2px;
				right: 2px;
				border-radius: 4px;
				bottom: 2px;
			}
		}
		&_active a,
		a:hover {
			background: #fff;
			box-shadow: 0 1px 1px rgba(0,0,0,0.6);
			&:after {
				border: 2px dotted;
			}
		}
		&_disabled {
			opacity: 0.3;
			a:hover {
				cursor: default;
				background: none;
				box-shadow: none;
				&:after {
					border:none;
				}
			}
		}
	}
}